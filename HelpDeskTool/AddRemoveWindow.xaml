<Window x:Class="DTTool.AddRemoveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DTTool"
        mc:Ignorable="d"
        Title="Add/Remove" Height="306" Width="473" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Add" HorizontalAlignment="Left" Height="26" Margin="338,3,0,0" VerticalAlignment="Top" Width="80" Click="Button_Click_1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0.178"/>
                    <GradientStop Color="#FF47FF07" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Remove" HorizontalAlignment="Left" Height="26" Margin="338,45,0,0" VerticalAlignment="Top" Width="80" Click="Button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFFF8181" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Username:" HorizontalAlignment="Left" Height="23" Margin="14,0,0,0" VerticalAlignment="Top" Width="90"/>
        <Label Content="AD Group:" HorizontalAlignment="Left" Height="29" Margin="14,30,0,0" VerticalAlignment="Top" Width="90"/>
        <TextBox x:Name="ARusernameBox" HorizontalAlignment="Left" Height="15" Margin="82,6,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" FontSize="9"/>
        <TextBox x:Name="ARgroupBox" HorizontalAlignment="Left" Height="15" Margin="82,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" FontSize="9"/>
        <RichTextBox x:Name="ARoutputbox" IsReadOnly="True" HorizontalAlignment="Left" Height="170" Margin="26,82,0,0" VerticalAlignment="Top" Width="276" Background="Black" Foreground="White" TextBlock.LineHeight="1">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label Content="Quick Add" HorizontalAlignment="Left" Height="37" Margin="330,93,0,0" VerticalAlignment="Top" Width="92" HorizontalContentAlignment="Center" FontSize="16"/>
        <Button Content="ISDG_CTX_eRecord2" HorizontalAlignment="Left" Height="27" Margin="326,129,0,0" VerticalAlignment="Top" Width="104" FontSize="10" Click="Button_Click_2"/>
        <Button Content="ISDU_CitrixAccessGateway" HorizontalAlignment="Left" Height="27" Margin="326,161,0,0" VerticalAlignment="Top" Width="104" FontSize="9" Click="Button_Click_3"/>
        <Button Content="ISDU_VPN_GP_FullAccess" HorizontalAlignment="Left" Height="27" Margin="326,193,0,0" VerticalAlignment="Top" Width="104" FontSize="9" Click="Button_Click_5"/>
        <Button Content="ISDG_VPN_FullAccess" HorizontalAlignment="Left" Height="27" Margin="326,225,0,0" VerticalAlignment="Top" Width="104" Click="Button_Click_4" FontSize="10"/>

    </Grid>
</Window>
